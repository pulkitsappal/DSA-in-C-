#include <bits/stdc++.h> 
int peakValue(vector<int> &arr){
    // Write your code here.

    int low = 0, high = arr.size() - 1, mid;

    while(low<=high){
        mid = low + (high - low)/2;
        if(arr[mid]>arr[mid-1] && arr[mid]>arr[mid+1]) return mid;
        else if(arr[mid-1]>arr[mid]) high = mid - 1;
        else low = mid + 1;
    }

    return -1;
}
